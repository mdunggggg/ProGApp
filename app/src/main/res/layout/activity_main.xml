<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imageProPtitView"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:srcCompat="@drawable/learn_together" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="btnLogin_OnClick"
        android:text="@string/play_game"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/fbButton"
            android:layout_width="@dimen/user_item_buttonSize"
            android:layout_height="@dimen/user_item_buttonSize"
            android:background="@color/white"
            app:srcCompat="@drawable/facebook" />
        <ImageButton
            android:id="@+id/githubButton"
            android:layout_width="@dimen/user_item_buttonSize"
            android:layout_height="@dimen/user_item_buttonSize"
            android:background="@color/white"
            app:srcCompat="@drawable/github" />

        <ImageButton
            android:id="@+id/proptitButton"
            android:layout_width="@dimen/user_item_buttonSize"
            android:layout_height="@dimen/user_item_buttonSize"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_proptit" />
    </LinearLayout>
</LinearLayout>